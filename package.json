{
  "name": "scribere",
  "version": "0.1.0",
  "description": "Scribere",
  "productName": "Scribere",
  "CSC_IDENTITY_AUTO_DISCOVERY": false,
  "repository": "https://github.com/MaelDevFr/markdown-editor",
  "private": true,
  "main": "public/main.js",
  "author": "MaÃ«l C.",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@uiw/react-md-editor": "^3.18.1",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-remote": "^1.3.0",
    "file-saver": "^2.0.5",
    "markdown-it": "^13.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.3",
    "react-scripts": "5.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "update-electron-app": "^2.0.1",
    "wait-on": "^6.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm start\" \"npm run electron:start\"",
    "electron:start": "wait-on tcp:3000 && electron . -c.mac.identity=null",
    "Ebuild": "electron-builder -c.extraMetadata.main=build/main.js -c.mac.identity=null",
    "fullBuild": "electron-builder -mwl -c.extraMetadata.main=build/main.js -c.mac.identity=null"
  },
  "build": {
    "extends": null,
    "appId": "com.scrib.scribere-app",
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "publish": [
        "github"
      ],
      "icon": "./public/logo.icns"
    },
    "win": {
      "publish": [
        "github"
      ],
      "icon": "./public/logo.ico"
    },
    "linux": {
      "publish": [
        "github"
      ],
      "icon": "./public.logo.png"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^20.2.0",
    "electron-builder": "^23.3.3",
    "electron-packager": "^16.0.0"
  }
}
